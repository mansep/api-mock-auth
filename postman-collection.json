    },
    {
      "name": "4. Error Cases",
      "item": [
        {
          "name": "Unauthorized - No Auth",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/users",
              "host": ["{{base_url}}"],
              "path": ["api", "users"]
            }
          }
        },
        {
          "name": "Invalid API Key",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-API-Key",
                "value": "invalid-key"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/users",
              "host": ["{{base_url}}"],
              "path": ["api", "users"]
            }
          }
        },
        {
          "name": "Invalid OAuth Credentials",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"grant_type\": \"client_credentials\",\n  \"client_id\": \"invalid\",\n  \"client_secret\": \"invalid\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/oauth/token",
              "host": ["{{base_url}}"],
              "path": ["oauth", "token"]
            }
          }
        },
        {
          "name": "Not Found - User 999",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-API-Key",
                "value": "api-key-123456"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/users/999",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "999"]
            }
          }
        }
      ]
    }
  ]
}
